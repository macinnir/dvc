{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Appendix: https://code.visualstudio.com/docs/editor/tasks-appendix
    // Variables: https://code.visualstudio.com/docs/editor/variables-reference
    "version": "2.0.0",
    "tasks": [
         {
            "label": "build",
            "type": "shell",
            "command": "make install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "install",
            "type": "shell",
            "command": "go install",
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go test -cover ./...",
            "problemMatcher": [
                "$go",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
            }
        }
    ]
}